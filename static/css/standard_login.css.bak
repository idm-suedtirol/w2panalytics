	.aside,.footer-2 ul,.actions,.alt,.footer-1,#github,.forecast,.lang{display:none}
	#footer{border-top:1px solid #ccc}
	.carpark{border-bottom:1px solid #ccc;padding-bottom:10pt;margin-bottom:10pt}
	h2{font-size:14pt}
	h3{font-size:13pt}
	h4{font-size:12pt}
