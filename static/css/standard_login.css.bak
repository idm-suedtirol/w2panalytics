	.footer-2 .integreen a{background-image:url(../images/logo-integreen@2x.jpg);background-size:104px 27px}
	.footer-2 .bz a{background-image:url(../images/logo-comune-bz@2x.jpg);background-size:102px 40px}
	.footer-2 .tis a{background-image:url(../images/logo-tis@2x.jpg);background-size:53px 41px}

}


/* ------- RULES FOR SAFARI AND CHROME  ------- */

@media screen and (-webkit-min-device-pixel-ratio:0) {

	body,input,select,textarea{-webkit-font-smoothing:antialiased;text-rendering:optimizeLegibility}

}


/* ------- PRINT  ------- */

@media print{

	body{font-size:12pt}
	h1{color:#000;text-decoration:none;border-bottom:1px solid #ccc;padding-bottom:5pt}
