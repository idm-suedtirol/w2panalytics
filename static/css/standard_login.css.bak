/* ------- ONLY SMARTPHONE LANDSCAPE ------- */

@media only screen and (orientation:landscape) and (max-device-width:37.5em){

	.logo{width:25%}
	#map{height:280px}

}


@media only screen and (min-width:25em){ /* 400px */

	.actions{margin:1.2em 5% 0}

	.leaflet-popup{top:67px}
	.leaflet-popup-pane{width:70%}
}

@media only screen and (min-width:31.250em){ /* 500px */

	.actions{width:auto;margin:1.5em 5% 0}
	.actions .time{margin-right:19px}
	.actions .other{float:left}
	#map .leaflet-control-zoom{bottom:auto;top:1.5em;margin:0}

	.leaflet-popup{top:80px}
	.leaflet-popup-pane{width:416px}
	.leaflet-popup-content{padding:1.4em 1.9em}
	.leaflet-popup-content h2{font-size:2.5em}
	.leaflet-popup-content .direction{margin-bottom:.93em}
	.leaflet-popup-content .direction .to{margin-right:18px}
	.leaflet-popup-content .direction .reverse{float:none;border-bottom:1px dotted #d2232a;font-size:.8em}
	.leaflet-popup-content .direction .from, .leaflet-popup-content .direction .to{width:26px;height:26px;line-height:26px}

	.slots-container{margin-bottom:1.6em}
	.available-slots{width:47.25%;margin:0 5.5% 0 0}

	.trend .input{position:absolute;right:0;top:-19px}

	.footer-2 ul{max-width:450px}
	.footer-2 li{margin:0 3% 1em}
}


/* ------- MEDIUM / TABLET ------- */

@media only screen and (min-width:46.875em){ /* 750px */

	.aux{width:90%}
	header{padding:36px 0 37px 0}

	.aside{padding:5.5em 0}
	.aside .buttons{text-align:center;margin:0 auto;width:auto;max-width:none;}
	.aside .buttons li{display:inline-block;min-width:290px;-moz-box-shadow:0px 0px 8px #141415;-webkit-box-shadow:0px 0px 8px #141415;box-shadow:0px 0px 8px #141415}
	.aside .buttons li a{display:block}

	#map{height:600px;overflow:hidden}

	.footer-2 ul{max-width:none}

}


/* ------- WIDE up to 1024 / TABLET ------- */

@media only screen and (min-width: 61em){ /* 976px */

	.footer-2 .aux2{float:right;width:48%}
	.footer-2 .text{float:left;text-align:left}
	.footer-2{clear:none;float:left;width:100%;padding:2em 0 1.3em}
	.footer-2 ul{max-width:422px;width:100%;margin:0;float:right;text-align:right}
	.footer-2 li{margin:0 0 1em 4%}
	.footer-2 li.eu{margin-left:0}
	.footer-2 .text{margin-bottom:.3em}

}

@media only screen and (min-width: 71.875em){ /* 1150px */

	.logo a{left:-21px}

	.actions{margin:1.5em 2% 0}
	#map .leaflet-control-zoom{right:2%}

	.footer-2 .aux2{width:54%}
	.footer-2 ul{max-width:none}

}


/* ------- WIDE over 1280 / DESKTOP ------- */

@media only screen and (min-width: 82em){ /* 1312px */

	.aux{width:90%}
	#github{display:block;position:absolute;top:0;right:0;z-index:0;background:url(../images/bg-github.png) 0 0 no-repeat;width:156px;height:156px;text-indent:-9999px;border:0}
	#map{height:700px}

}


/* ------- SUPER WIDE over 1700 ------- */

@media only screen and (min-width: 106em){ /* 1696px */

	.aux{width:1500px}

}


/* ------- HOVER EFFECTS ------- */

@media only screen and (min-device-width:60em){

	.actions .time a:hover{background-color:#fafafa}
	.controls a.map:hover{background-position:-28px -20px}
	.actions .time:hover span,
	.controls a:hover,
	#map .leaflet-control-zoom a:hover{background-color:#686672}

	.aside .buttons li:hover{opacity:.85}

}


